@import 'lib';

.potato-captcha {
    display: none;
}

button, input, select, textarea {
    font: 100% $open-stack;
    margin: 0;
    max-width: 100%;
    vertical-align: middle;
}

button, input {
    line-height: normal;
}

button, input[type=button], input[type=reset], input[type=submit] {
    cursor: pointer;
}

input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
    color: $placeholder-grey;
}

input:-moz-placeholder,
textarea:-moz-placeholder {
    color: $placeholder-grey;
    text-overflow: ellipsis;  // Firefox 18 and below
}

input::-moz-placeholder,
textarea::-moz-placeholder {
    color: $placeholder-grey;
    text-overflow: ellipsis;  // Firefox 19+
}

input[placeholder],
textarea[placeholder] {
    text-overflow: ellipsis;
    // Because bug 673873 is stupidface.
    // Yes, the order matters. Firefox 18 (and below) is clownshoes.
    &:-moz-placeholder:focus {
        color: transparent !important;
    }
    &:focus::-moz-placeholder {
        color: transparent !important;
    }
    &:focus::-webkit-input-placeholder {
        color: transparent !important;
    }
}

form {
    .field,
    .help-text {
        display: block;

        &.hidden {
            display: none;
        }
    }
    label,
    input,
    select,
    textarea,
    .fake-field {
        display: inline-block;
    }
    .field {
        margin: 20px 0;
        width: 525px;
    }
    .featured-details,
    .collection-type {
        margin: 20px 0;

        .field:first-child {
            margin-top: 0;
        }
        .field:last-child {
            margin-bottom: 0;
        }
    }

    label {
        color: $label-grey;
        font-size: 14px;
        margin-right: 10px;
        text-align: right;
        width: 110px;
    }
    label.required:before,
    .apps-widget-multiple label.required:before {
        color: $red;
        content: '\2A'; // Asterisk
        display: inline-block;
        font-weight: bold;
        margin: 0 3px;
    }

    .help-text,
    .error-msg {
        color: $label-grey;
        font-size: 13px;
        font-style: italic;
        margin: 5px 0 0 125px;
        text-align: right;
    }
    .apps-multiple .error-msg {
        margin-left: 0;
        text-align: left;
    }
    .has-error {
        label,
        .error-msg {
            color: $red;
        }

        input[type=email],
        input[type=text],
        input[type=search],
        input[type=url],
        textarea {
            border-color: $red;
            color: $red;

            &:focus {
                border-color: $red;
            }
        }
    }

    input[type=email],
    input[type=text],
    input[type=search],
    input[type=url],
    textarea,
    .pretty-select,
    .fake-field {
        background-color: #fff;
        border: 1px solid #cbcbcb;
        border-radius: 5px;
        font-weight: normal;
        font-size: 20px;
        height: 40px;
        padding: 0px 10px;
        width: 400px;

        &:focus {
            border-color: $blue-action-primary;
        }
    }

    .has-textarea {
        width: 625px;

        textarea {
            height: 125px;
            padding: 10px;
            width: 500px;
        }
    }

    .has-pretty-select {
        label {
            padding-top: 13px;
            position: relative;
            top: -14px;
        }
        .pretty-select {
            cursor: pointer;
            display: inline-block;
            padding: 0;
            overflow: hidden;
            position: relative;

            &:before {
                // Custom dropdown arrow
                dropdown();
                color: $medium-gray;
                content: '\25BC';
                font-size: 16px;
                top: 10px;
                right: 6px;
                z-index: 2;
            }
            &:after {
                // Hide the native `<select>` arrow.
                background: $white;
                border-left: 1px solid $cement-gray;
                content: "";
                display: block;
                height: 100%;
                pointer-events: none;
                position: absolute;
                right: 0;
                top: 0;
                width: 45px;
                z-index: 1;
            }
            select {
                -moz-padding-start: 10px;
                appearance-none();
                background: none;
                border: 0;
                cursor: pointer;
                height: 40px;
                outline: 0;
                padding: 5px 10px 0px 7px;
                width: 400px;

                &:-moz-focusring {
                    color: transparent;
                    text-shadow: 0 0 0 #000;
                }
            }
        }
    }

