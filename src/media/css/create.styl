.apps {
    .background-image-input.shelf-landing {
        display: none;
    }
    .featured-app {
        display: inline-block;
        margin-top: 10px;
        width: 320px;
    }
    .selected-app {
        border: 1px solid $light-gray;
        border-radius: 0 0 5px 5px;
        font-weight: 300;
        padding: 10px;
    }
    .background-image.field {
        width: 625px;
    }
}

.apps-widget {
    margin-top: 10px;

    .apps .result {
        -webkit-touch-callout: none;
        -webkit-user-select: none;
        -khtml-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        position: relative;
        user-select: none;

        &:hover {
            background: none;
            cursor: move;
        }
        &.dragged {
            background-color: $white;
            border: 0;

            // !important to override the inline styles added by the JS library.
            height: 62px !important;
            width: 315px !important;

            .compat-info,
            .actions {
                display: none;
            }
        }
    }
    .add-app-group {
        position: absolute;
        top: 0;
        right: 0;

        i {
            display: inline-block;
            margin-right: 3px;
        }

        &:hover,
        i {
            color: $sailor-blue;
        }
    }
    .app-group-input {
        width: 300px;
    }
    .delete-app-group {
        background: url(../img/pretty/close.svg) 50% no-repeat;
        background-size: 18px auto;
        display: inline-block;
        height: 40px;
        width: 40px;

        &:hover {
            background: url(../img/pretty/close_active.svg) 50% no-repeat;
            cursor: pointer;
        }
    }
}

.collections[data-collection-type="promo"] {
    .add-app-group {
        display: inline-block;
    }
}

option.highlighted {
    background-color: $flamin-hot-cheetos-orange;
    color: #fff;
}

.island.submit {
    button {
        float: left;
    }
    .form-errors {
        float: left;
        margin-left: 22px;
    }
}

.actions {
    i, a {
        display: block;
        width: 40px;
    }
    .reorder {
        color: $light-gray;
        font-size: 20px;
        height: 18px;
        position: absolute;
        text-align: center;
        right: 0;

        &:hover {
            color: $sailor-blue;
        }
        &:first-child{
            line-height: 22px;
            top: 0;
        }
        &:last-child {
            bottom: 0;
            line-height: 14px;
        }
    }
    .delete {
        background: url(../img/pretty/close.svg) 50% no-repeat;
        background-size: 13px auto;
        height: 26px;
        position: absolute;
        right: 0;
        top: 18px;

        &:hover {
            background-image: url(../img/pretty/close_active.svg);
            cursor: pointer;
        }
    }
}

.aviary {
    .preview {
        width: 320px;
        height: auto;
    }
